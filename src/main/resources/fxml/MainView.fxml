<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/8" 
      fx:controller="application.controller.MainController"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <HBox spacing="5.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 5; -fx-background-radius: 5;">
            <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS" 
                      style="-fx-background-color: transparent; -fx-font-size: 14px;"/>
            <Button text="返回上级" onAction="#handleUpDirectory" 
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 3;">
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0">
                        <Image url="@../image/up-arrow.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
        <AnchorPane fx:id="contentArea" VBox.vgrow="ALWAYS" 
                    style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <!-- 这里将显示文件和文件夹 -->
        </AnchorPane>
    </children>
</VBox> 